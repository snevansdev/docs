openapi: 3.0.3
info:
  title: Sample API with Server Variables
  description: A simple API demonstrating the use of server variables in OpenAPI 3.0
  version: 1.0.0
  contact:
    name: API Support
    email: support@example.com

servers:
  - url: https://{vendor}.org:{port}/anything
    description: API server with configurable environment and port
    variables:
      vendor:
        default: httpbin
        description: The vendor to connect to
        enum:
          - httpbin
          - httpbingo
      port:
        default: '443'
        description: The port number for the API server
  - url: https://{vendor}:{port}/anything
    description: API server with configurable environment and port
    variables:
      vendor:
        default: httpbin.org
        description: The vendor to connect to
        enum:
          - httpbin.org
          - httpbingo.org
      port:
        default: '443'
        description: The port number for the API server
paths:
  /users:
    get:
      summary: Get list of users
      description: Returns a list of users from the system
      operationId: getUsers
      tags:
        - Users
      parameters:
        - name: limit
          in: query
          description: Maximum number of users to return
          required: false
          schema:
            type: integer
            default: 10
            minimum: 1
            maximum: 100
      responses:
        '200':
          description: Successful response with user list
          content:
            application/json:
              schema:
                type: object
                properties:
                  data:
                    type: array
                    items:
                      type: object
                      properties:
                        id:
                          type: integer
                          example: 1
                        name:
                          type: string
                          example: John Doe
                        email:
                          type: string
                          example: john.doe@example.com
                  total:
                    type: integer
                    example: 1
        '400':
          description: Bad request
          content:
            application/json:
              schema:
                type: object
                properties:
                  error:
                    type: string
                    example: Invalid parameters
        '500':
          description: Internal server error
          content:
            application/json:
              schema:
                type: object
                properties:
                  error:
                    type: string
                    example: Server error occurred

components:
  schemas: {}

