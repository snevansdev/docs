components:
  schemas:
    StatusResponse:
      type: object
      properties:
        status:
          type: integer
          description: The HTTP status code
          example: 200
        message:
          type: string
          description: A descriptive message about the status
          example: "OK"
        timestamp:
          type: string
          format: date-time
          description: The timestamp when the response was generated
          example: "2024-01-15T10:30:00Z"
        requestId:
          type: string
          description: A unique identifier for this request
          example: "req_123456789"
        data:
          type: object
          description: Additional data related to the status
          example:
            code: 200
            description: "The request has succeeded"
            category: "success"
      required:
        - status
        - message
        - timestamp
        - requestId
    
    ErrorResponse:
      type: object
      properties:
        status:
          type: integer
          description: The HTTP status code
          example: 404
        message:
          type: string
          description: A descriptive error message
          example: "Not Found"
        timestamp:
          type: string
          format: date-time
          description: The timestamp when the error occurred
          example: "2024-01-15T10:30:00Z"
        requestId:
          type: string
          description: A unique identifier for this request
          example: "req_123456789"
        error:
          type: object
          description: Additional error details
          properties:
            code:
              type: string
              description: Error code
              example: "NOT_FOUND"
            details:
              type: string
              description: Detailed error information
              example: "The requested resource was not found on this server"
            category:
              type: string
              description: Error category
              example: "client_error"
          example:
            code: "NOT_FOUND"
            details: "The requested resource was not found on this server"
            category: "client_error"
      required:
        - status
        - message
        - timestamp
        - requestId
        - error

  examples:
    successResponse:
      summary: Successful response example
      value:
        status: 200
        message: "OK"
        timestamp: "2024-01-15T10:30:00Z"
        requestId: "req_123456789"
        data:
          code: 200
          description: "The request has succeeded"
          category: "success"
    
    errorResponse:
      summary: Error response example
      value:
        status: 404
        message: "Not Found"
        timestamp: "2024-01-15T10:30:00Z"
        requestId: "req_123456789"
        error:
          code: "NOT_FOUND"
          details: "The requested resource was not found on this server"
          category: "client_error"

tags:
  - name: Status
    description: Operations for testing HTTP status codes 
