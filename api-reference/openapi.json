openapi: 3.1.0
info:
  title: API with Enums in Query Parameters5
  version: 1.0.0
  description: OpenAPI 3.1 specification demonstrating query parameters with various enum types

servers:
  - url: https://api.example.com/v1

paths:
  /filter:
    get:
      summary: Filter resources by various enum query parameters
      parameters:
        - name: status
          in: query
          schema:
            type: string
            enum:
              - active
              - inactive
              - pending
              - suspended
          description: User status filter

        - name: role
          in: query
          schema:
            type: string
            enum:
              - admin
              - moderator
              - user
              - guest
          description: User role filter

        - name: priority
          in: query
          schema:
            type: integer
            enum:
              - 1
              - 2
              - 3
              - 4
              - 5
          description: User priority filter (1-5)

        - name: discount
          in: query
          schema:
            type: number
            enum:
              - 0.1
              - 0.15
              - 0.2
              - 0.25
              - 0.3
          description: Discount type filter

        - name: featureFlag
          in: query
          schema:
            type: boolean
            enum:
              - true
              - false
          description: Feature flag filter

        - name: notificationChannel
          in: query
          schema:
            type: string
            enum:
              - email
              - sms
              - push
              - slack
              - webhook
          description: Notification channel filter

        - name: orderStatus
          in: query
          schema:
            type: string
            enum:
              - pending
              - confirmed
              - processing
              - shipped
              - delivered
              - cancelled
              - refunded
          description: Order status filter

        - name: paymentMethod
          in: query
          schema:
            type: string
            enum:
              - credit_card
              - debit_card
              - paypal
              - apple_pay
              - google_pay
              - bank_transfer
          description: Payment method filter

        - name: shippingMethod
          in: query
          schema:
            type: string
            enum:
              - standard
              - express
              - overnight
              - click_and_collect
          description: Shipping method filter

        - name: theme
          in: query
          schema:
            type: string
            enum:
              - light
              - dark
              - system
          description: Theme preference filter

        - name: language
          in: query
          schema:
            type: string
            enum:
              - en
              - zh
              - ja
              - ko
              - es
              - fr
          description: Language filter

        - name: timezone
          in: query
          schema:
            type: string
            enum:
              - UTC
              - America/New_York
              - America/Los_Angeles
              - Europe/London
              - Europe/Paris
              - Asia/Tokyo
              - Asia/Shanghai
          description: Timezone filter

        - name: dateFormat
          in: query
          schema:
            type: string
            enum:
              - YYYY-MM-DD
              - MM/DD/YYYY
              - DD/MM/YYYY
          description: Date format filter

        - name: timeFormat
          in: query
          schema:
            type: string
            enum:
              - 12h
              - 24h
          description: Time format filter

        - name: currency
          in: query
          schema:
            type: string
            enum:
              - USD
              - EUR
              - GBP
              - JPY
              - CNY
          description: Currency filter

        - name: productCategory
          in: query
          schema:
            type: string
            enum:
              - electronics
              - clothing
              - food
              - books
              - home
              - sports
              - beauty
              - toys
          description: Product category filter

        - name: inventoryStatus
          in: query
          schema:
            type: string
            enum:
              - in_stock
              - low_stock
              - out_of_stock
              - pre_order
          description: Inventory status filter

        - name: productTag
          in: query
          schema:
            type: string
            enum:
              - bestseller
              - new
              - sale
              - featured
              - limited
              - eco_friendly
              - organic
              - handmade
          description: Product tag filter

        - name: rating
          in: query
          schema:
            type: integer
            enum:
              - 1
              - 2
              - 3
              - 4
              - 5
          description: Rating filter (1-5)

        - name: itemCategory
          in: query
          schema:
            type: string
            enum:
              - electronics
              - clothing
              - food
              - books
              - home
              - sports
          description: Order item category filter

        - name: taxRate
          in: query
          schema:
            type: number
            enum:
              - 0.1
              - 0.15
              - 0.2
              - 0.25
              - 0.3
          description: Tax rate filter

        - name: autoRenew
          in: query
          schema:
            type: boolean
            enum:
              - true
              - false
          description: Auto renew filter

        - name: ids
          in: query
          schema:
            type: array
            items:
              type: string
              format: uuid
          description: List of UUIDs to filter

        - name: tags
          in: query
          schema:
            type: array
            items:
              type: string
              enum:
                - bestseller
                - new
                - sale
                - featured
                - limited
                - eco_friendly
                - organic
                - handmade
          description: Array of product tags to filter

        - name: ratings
          in: query
          schema:
            type: array
            items:
              type: integer
              enum:
                - 1
                - 2
                - 3
                - 4
                - 5
          description: Array of ratings to filter

        - name: statuses
          in: query
          schema:
            type: array
            items:
              type: string
              enum:
                - active
                - inactive
                - pending
                - suspended
          description: Array of statuses to filter

        - name: channels
          in: query
          schema:
            type: array
            items:
              type: string
              enum:
                - email
                - sms
                - push
                - slack
                - webhook
          description: Array of notification channels to filter

      responses:
        '200':
          description: Successful response with filtered results
          content:
            application/json:
              schema:
                type: object
                properties:
                  data:
                    type: array
                    items:
                      type: object
                      properties:
                        id:
                          type: string
                        name:
                          type: string
                        type:
                          type: string
        '400':
          description: Invalid request parameters
