openapi: 3.1.0
info:
  title: HTTP Status Code API
  description: |
    This API provides a single endpoint that can return responses with all possible HTTP status codes.
    This is useful for testing how your application handles different HTTP status codes.
  version: 1.0.0
  contact:
    name: API Support
    email: support@example.com
  license:
    name: MIT
    url: https://opensource.org/licenses/MIT

servers:
  - url: https://api.example.com/v1
    description: Production server
  - url: https://staging-api.example.com/v1
    description: Staging server
  - url: http://localhost:3000/v1
    description: Local development server

paths:
  /status/{code}:
    get:
      summary: Get response with specific HTTP status code
      description: |
        Returns a response with the specified HTTP status code.
        This endpoint is useful for testing how your application handles different HTTP status codes.
        
        **Supported status codes:**
        - 1xx: Informational responses
        - 2xx: Successful responses  
        - 3xx: Redirection responses
        - 4xx: Client error responses
        - 5xx: Server error responses
        
        **Examples:**
        - `/status/200` - Returns a successful response
        - `/status/404` - Returns a not found error
        - `/status/500` - Returns a server error
      operationId: getStatusResponse
      parameters:
        - name: code
          in: path
          required: true
          description: The HTTP status code to return
          schema:
            type: integer
            minimum: 100
            maximum: 599
            example: 200
        - name: message
          in: query
          required: false
          description: Custom message to include in the response body
          schema:
            type: string
            example: "Custom status message"
        - name: delay
          in: query
          required: false
          description: Delay in milliseconds before returning the response
          schema:
            type: integer
            minimum: 0
            maximum: 30000
            example: 1000
      responses:
        # 1xx Informational
        '100':
          description: Continue
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/StatusResponse'
        '101':
          description: Switching Protocols
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/StatusResponse'
        '102':
          description: Processing
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/StatusResponse'
        '103':
          description: Early Hints
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/StatusResponse'
        
        # 1XX - Informational (uppercase)
        '1XX':
          description: Informational Response
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/StatusResponse'
        
        # # 1xx - Informational (lowercase)
        # '1xx':
        #   description: Informational Response
        #   content:
        #     application/json:
        #       schema:
        #         $ref: '#/components/schemas/StatusResponse'
        
        # Additional 1xx status codes
        '111':
          description: Custom Informational Response
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/StatusResponse'
        
        # 2xx Successful
        '200':
          description: OK
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/StatusResponse'
        '201':
          description: Created
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/StatusResponse'
        '202':
          description: Accepted
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/StatusResponse'
        '203':
          description: Non-Authoritative Information
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/StatusResponse'
        '204':
          description: No Content
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/StatusResponse'
        '205':
          description: Reset Content
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/StatusResponse'
        '206':
          description: Partial Content
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/StatusResponse'
        '207':
          description: Multi-Status
          content:
