openapi: 3.1.0
info:
  title: Content Media Type Example API
  version: 1.0.0
  description: An API demonstrating the use of contentMediaType for JSON strings

servers:
  - url: https://api.example.com/v1
    description: Production server

paths:
  /items:
    post:
      summary: Create a new item
      description: Creates a new item with embedded JSON metadata
      operationId: createItem
      requestBody:
        required: true
        content:
          application/json:
            schema:
              $ref: '#/components/schemas/ItemRequest'
      responses:
        '201':
          description: Item created successfully
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/ItemResponse'
        '400':
          description: Bad request
          content:
            application/json:
              schema:
                $ref: '#/components/schemas/Error'

components:
  schemas:
    ItemRequest:
      type: object
      required:
        - name
        - metadata
      properties:
        name:
          type: string
          description: The name of the item
          example: "Sample Item"
        metadata:
          type: string
          contentMediaType: application/json
          contentSchema:
            type: object
            properties:
              category:
                type: string
                description: Product category
              price:
                type: number
                description: Product price
              inStock:
                type: boolean
                description: Whether the product is in stock
            required:
              - category
              - price
          description: JSON metadata stored as a string
          example: '{"category": "electronics", "price": 299.99, "inStock": true}'
    
    ItemResponse:
      type: object
      properties:
        id:
          type: string
          description: The unique identifier of the created item
          example: "item-12345"
        name:
          type: string
          description: The name of the item
          example: "Sample Item"
        metadata:
          type: string
          contentMediaType: application/json
          contentSchema:
            type: object
            properties:
              category:
                type: string
                description: Product category
              price:
                type: number
                description: Product price
              inStock:
                type: boolean
                description: Whether the product is in stock
            required:
              - category
              - price
          description: JSON metadata stored as a string
          example: '{"category": "electronics", "price": 299.99, "inStock": true}'
        createdAt:
          type: string
          format: date-time
          description: The timestamp when the item was created
          example: "2025-11-10T12:00:00Z"
    
    Error:
      type: object
      properties:
        code:
          type: string
          description: Error code
          example: "INVALID_REQUEST"
        message:
          type: string
          description: Error message
          example: "The request body is invalid"

