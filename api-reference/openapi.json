        # # 2xx - Successful (lowercase)
        # '2xx':
        #   description: Successful Response
        #   content:
        #     application/json:
        #       schema:
        #         $ref: '#/components/schemas/StatusResponse'
        
        # Additional 2xx status codes
        '222':
